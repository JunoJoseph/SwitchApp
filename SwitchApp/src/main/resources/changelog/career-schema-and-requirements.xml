<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create SoftSkills Table -->
    <changeSet author="yourname" id="create-softskills-table">
        <createTable tableName="SoftSkills">
            <column name="SkillID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="SkillName" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Create HardSkills Table -->
    <changeSet author="yourname" id="create-hardskills-table">
        <createTable tableName="HardSkills">
            <column name="SkillID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="SkillName" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Create Certifications Table -->
    <changeSet author="yourname" id="create-certifications-table">
        <createTable tableName="Certifications">
            <column name="CertificationID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="CertificationName" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Create Experiences Table -->
    <changeSet author="yourname" id="create-experiences-table">
        <createTable tableName="Experiences">
            <column name="ExperienceID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="ExperienceName" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Create CareerPathRequirements Table -->
    <changeSet author="yourname" id="create-careerpathrequirements-table">
        <createTable tableName="CareerPathRequirements">
            <column name="ID" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="PathID" type="int">
                <constraints
                        foreignKeyName="fk_careerpathrequirements_careerpaths"
                        references="CareerPaths(ID)"/>
            </column>
            <column name="RequirementID" type="int">
                <constraints foreignKeyName="fk_careerpathrequirements_requirements"/>
            </column>
            <column name="RequirementType" type="varchar(255)"/>
        </createTable>
    </changeSet>

    <!-- Define Foreign Key Constraints for CareerPathRequirements Table -->
    <changeSet author="yourname" id="add-foreign-keys">
        <addForeignKeyConstraint baseTableName="CareerPathRequirements"
                                 baseColumnNames="PathID"
                                 constraintName="fk_careerpathrequirements_careerpaths"
                                 referencedTableName="CareerPaths"
                                 referencedColumnNames="ID"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="CareerPathRequirements"
                                 baseColumnNames="RequirementID"
                                 constraintName="fk_careerpathrequirements_requirements"
                                 referencedTableName="SoftSkills,HardSkills,Certifications,Experiences"
                                 referencedColumnNames="SkillID,SkillID,CertificationID,ExperienceID"
                                 onDelete="CASCADE"
                                 onUpdate="CASCADE"/>
    </changeSet>

</databaseChangeLog>